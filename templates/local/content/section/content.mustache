{{!
    Section content template for Alpy format

    This template displays the content of a course section.

    Example context (json):
    {
        "header": {
            "title": "Section title",
            "name": "Section title"
        },
        "summary": {
            "summarytext": "Summary text"
        }
    }
}}

{{#header}}
    <div class="section-header">
        <h3 class="section-title">{{{title}}}</h3>
    </div>
{{/header}}

{{#summary}}
    <div class="section-summary">
        {{{summarytext}}}
    </div>
{{/summary}}
